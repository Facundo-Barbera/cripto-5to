{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/analyze.py"
    },
    {
      "src": "/api/recommendations",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/recommendations.py"
    },
    {
      "src": "/api/domains/default",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/domains_default.py"
    },
    {
      "src": "/api/batch",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/batch.py"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/locales/(.*)",
      "dest": "/public/locales/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
